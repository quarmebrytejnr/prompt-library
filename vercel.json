{
  "version": 2,
  "builds": [
    {
      "src": "client/**/*.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public",
        "cleanDistDir": true
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "/server/index.ts"
    },
    {
      "src": "/.*",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/assets/.*",
      "dest": "/attached_assets/$1"
    }
  ]
}